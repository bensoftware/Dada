<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardview"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_margin="8dp"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    card_view:cardBackgroundColor="#FFFFFF"
    card_view:cardElevation="4dp"
    tools:context="com.dada.ga.MainActivity">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <HorizontalScrollView
            android:id="@+id/scrolls"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:elevation="5dp">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/ref_images"
                android:elevation="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/category_icon"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_alignParentTop="true"
                    android:layout_margin="2dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/emma"
                    android:elevation="5dp" />

                <ImageView
                    android:id="@+id/category_icon2"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_alignParentTop="true"
                    android:layout_margin="2dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/emma"
                    android:elevation="5dp" />

                <ImageView
                    android:id="@+id/category_icon3"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_alignParentTop="true"
                    android:layout_margin="2dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/emma"
                    android:elevation="5dp" />

                <ImageView
                    android:id="@+id/category_icon4"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_alignParentTop="true"
                    android:layout_margin="2dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/emma"
                    android:elevation="5dp" />

                <ImageView
                    android:id="@+id/category_icon5"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_alignParentTop="true"
                    android:layout_margin="2dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/emma"
                    android:elevation="5dp" />
            </LinearLayout>
        </HorizontalScrollView>
    </RelativeLayout>
</android.support.v7.widget.CardView>