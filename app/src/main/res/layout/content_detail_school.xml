<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="ga.dada.com.dad.DetailSchoolActivity"
    tools:showIn="@layout/activity_detail_school">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp"
        android:paddingBottom="2dp">

        <!--this cardview contains somme images about on school   -->
        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/cardImages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:clickable="true"
            android:elevation="5dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            card_view:cardBackgroundColor="#FFFFFF"
            card_view:cardElevation="4dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="20dp">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <TextView
                        android:id="@+id/titles"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:padding="2dp"
                        android:text="Photos"
                        android:textColor="@color/colorAccent"
                        android:textSize="16dp" />


                    <View
                        android:id="@+id/separato"
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/titles"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:background="@android:color/darker_gray" />

                    <HorizontalScrollView
                        android:id="@+id/scrollphoto"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:layout_below="@+id/separato"
                        android:elevation="5dp">

                        <LinearLayout
                            android:id="@+id/ref_images"
                            android:layout_width="match_parent"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:layout_height="match_parent"
                            android:elevation="5dp"
                            android:orientation="horizontal">



                        </LinearLayout>

                    </HorizontalScrollView>


                    <View
                        android:id="@+id/separatorend"
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/scrolls"
                        android:background="@android:color/darker_gray" />

                </RelativeLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>


        <!--this cardview contains a status  -->
        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cardviewsss"
            android:background="@color/colorPrimary"
            android:clickable="true"
            android:elevation="5dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            card_view:cardBackgroundColor="#FFFFFF"
            card_view:cardElevation="4dp">

            <LinearLayout
                android:id="@+id/statut"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="5dp"
                android:orientation="vertical"
                android:paddingBottom="20dp">

                <TextView
                    android:id="@+id/textViewss"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:gravity="left"
                    android:text="Statut"
                    android:textColor="@color/colorAccent" />

                <View
                    android:id="@+id/separatorends"
                    android:layout_width="fill_parent"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:layout_height="1dp"
                    android:layout_below="@+id/scrolls"
                    android:background="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/textstatut"
                    android:layout_width="wrap_content"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageViews"
                    android:gravity="left"


      />

            </LinearLayout>
        </android.support.v7.widget.CardView>



        <!--this cardview contains the note of school  -->
        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/textv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cardviewsss"
            android:background="@color/colorPrimary"
            android:clickable="true"
            android:elevation="5dp"
            android:focusable="false"
            android:focusableInTouchMode="true"
            android:text="New Text"
            card_view:cardBackgroundColor="#FFFFFF"
            card_view:cardElevation="4dp">

            <LinearLayout
                android:focusable="false"
                android:id="@+id/linear_note"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:elevation="5dp"
                android:orientation="vertical"
                android:paddingBottom="20dp">

                <TextView
                    android:id="@+id/text_n"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="Note"
                    android:textColor="@color/colorAccent" />

                <View
                    android:id="@+id/separ"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/scrolls"
                    android:background="@android:color/darker_gray" />

                <LinearLayout
                    android:focusable="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text_note"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/imageViews"
                        android:gravity="left"


                        />

                    <!--ImageView
                        android:id="@+id/image_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginLeft="200dp"
                        android:src="@drawable/phone" /-->

                    <RatingBar
                        android:focusable="true"
                        android:stepSize="1"
                        android:id="@+id/RatingBar01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </RatingBar>

                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>


        <!--this cardview contains the phone number  -->
        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/textViewssss"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cardviewsss"
            android:background="@color/colorPrimary"
            android:clickable="true"
            android:elevation="5dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:text="New Text"
            card_view:cardBackgroundColor="#FFFFFF"
            card_view:cardElevation="4dp">

            <LinearLayout
                android:id="@+id/linear_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="5dp"
                android:orientation="vertical"
                android:paddingBottom="20dp">

                <TextView
                    android:id="@+id/textViewsss"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="Telephone"
                    android:textColor="@color/colorAccent" />

                <View
                    android:id="@+id/separatorendstel"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/scrolls"
                    android:background="@android:color/darker_gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textphone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/imageViews"
                        android:gravity="left"
                        android:layout_marginLeft="5dp"
                    />

                    <ImageView
                        android:id="@+id/image_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginLeft="200dp"
                        android:src="@drawable/phone" />

                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <!--this cardview contains the link for geolocalisation  -->
        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/textViewsssss"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cardviewsss"
            android:clickable="true"
            android:elevation="5dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:padding="30dp"
            android:text="New Text"
            card_view:cardBackgroundColor="#FFFFFF"
            card_view:cardElevation="4dp">

            <LinearLayout
                android:id="@+id/lin_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="5dp"
                android:orientation="vertical">

                <TextView

                    android:id="@+id/textViewssses"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="Géolocalisation"
                    android:textColor="@color/colorAccent" />

                <View
                    android:id="@+id/separatorendstels"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/scrolls"
                    android:background="@android:color/darker_gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text_geolocalisation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/imageViews"
                        android:layout_marginLeft="5dp"
                        android:gravity="left"
                        android:text="Centre ville de libreville"
                        />

                    <ImageView
                        android:id="@+id/image_map"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginLeft="180dp"
                        android:src="@drawable/map" />

                </LinearLayout>
            </LinearLayout>

            <!--android.support.design.widget.FloatingActionButton
                android:id="@+id/fabibi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/fab_margin"
                android:src="@android:drawable/ic_menu_add"
                app:layout_anchor="@id/lin_id"
                app:layout_anchorGravity="bottom" /-->

        </android.support.v7.widget.CardView>


        <!--this cardview contains the option for to call school   -->

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/textViewsssse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cardviewsss"
            android:background="@color/colorPrimary"
            android:clickable="true"
            android:elevation="5dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:text="New Text"
            card_view:cardBackgroundColor="#FFFFFF"
            card_view:cardElevation="4dp">

            <LinearLayout
                android:id="@+id/linear_sms"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="5dp"
                android:orientation="vertical"
                android:paddingBottom="20dp">

                <TextView
                    android:id="@+id/text_edit_sms"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="Nous écrire"
                    android:textColor="@color/colorAccent" />

                <View
                    android:id="@+id/separatorendstelse"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/scrolls"
                    android:background="@android:color/darker_gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text_sms"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/imageViews"
                        android:gravity="left"
                        android:text="+241 07 48 33 87"
                        android:layout_marginLeft="5dp"/>

                    <ImageView
                        android:id="@+id/image_sms"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginLeft="200dp"
                        android:src="@drawable/email" />

                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>



        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_offre_formation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_offre"
            android:background="@color/colorPrimary"
            android:clickable="true"
            android:elevation="5dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:text="New Text"
            card_view:cardBackgroundColor="#FFFFFF"
            card_view:cardElevation="4dp">

            <LinearLayout
                android:id="@+id/linear_offre"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="5dp"
                android:orientation="vertical"
                android:paddingBottom="20dp">

                <TextView
                    android:id="@+id/text_ofre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="Nos ofrres de formation"
                    android:textColor="@color/colorAccent" />

                <View
                    android:id="@+id/separator_offre"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/scrolls"
                    android:background="@android:color/darker_gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text_ofree"
                        android:layout_marginLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/imageViews"
                        android:gravity="left"
                        android:text="Informatique,Robotique.." />


                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_frais_scolaire"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_offre"
            android:background="@color/colorPrimary"
            android:clickable="true"
            android:elevation="5dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:text="New Text"
            card_view:cardBackgroundColor="#FFFFFF"
            card_view:cardElevation="4dp">

            <LinearLayout
                android:id="@+id/linear_frais"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="5dp"
                android:orientation="vertical"
                android:paddingBottom="20dp">

                <TextView
                    android:id="@+id/text_frais"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="Frais"
                    android:textColor="@color/colorAccent" />

                <View
                    android:id="@+id/separator_frais"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/scrolls"
                    android:background="@android:color/darker_gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text_prixinscription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/imageViews"
                        android:gravity="left"
                        android:text="Inscription : 15000 FCFA" />

                    <!--TextView
                        android:id="@+id/text_fr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/imageViews"
                        android:gravity="left"
                        android:text="Préinsciption: 15000 FCFA"
                        android:textColor="@color/colorPrimary" /-->

                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>


</android.support.v4.widget.NestedScrollView>
