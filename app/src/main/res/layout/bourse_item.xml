<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/tools"
    app:cardBackgroundColor="@color/colorWhite"
    card_view:cardElevation="4dp"
    android:id="@+id/bv">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="0dp"
        >
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/ad_photo"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="5dp"
            android:src="@drawable/ecole_2"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ad_description"
            android:layout_toRightOf="@+id/ad_photo"
            android:layout_alignParentTop="true"
            android:textSize="16dp"
            android:text="gbhbhdhdh"
            android:textColor="#4D6067"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ad_publish_date"
            android:layout_toRightOf="@+id/ad_photo"
            android:layout_below="@+id/ad_description"
            android:text="nnnn"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ad_town"
            android:layout_toRightOf="@+id/ad_publish_date"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/ad_description"
            android:text="nnnns"
            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />
</android.support.v7.widget.CardView>